<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

 

  <display-name>TiendaDeRopaGG</display-name>

    <!-- Servlet Login -->
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>control.LoginControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/LoginControl</url-pattern>
    </servlet-mapping>

    <!-- Servlet Cliente -->
    <servlet>
        <servlet-name>ClienteControl</servlet-name>
        <servlet-class>control.ClienteControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteControl</servlet-name>
        <url-pattern>/ClienteControl</url-pattern>
    </servlet-mapping>

    <!-- Servlet Publicidad -->
    <servlet>
        <servlet-name>PublicidadControl</servlet-name>
        <servlet-class>control.PublicidadControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublicidadControl</servlet-name>
        <url-pattern>/PublicidadControl</url-pattern>
    </servlet-mapping>

    <!-- PÃ¡gina por defecto -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>